<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/roomid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:alpha="0.7"
        android:text="ID"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/musicInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="musicInfo"
        android:textSize="14dp"
        android:layout_alignBaseline="@+id/num"
        android:layout_alignBottom="@+id/num"
        android:layout_toEndOf="@+id/roomid" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="听众"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/roomid"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/musicInfo"
        android:layout_below="@+id/roomid"
        android:ellipsize="end"
        android:maxEms="18"
        android:singleLine="true"
        android:text="signature"
        android:textSize="14dp" />

</RelativeLayout>